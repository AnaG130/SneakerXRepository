@page
@model RecuperarModel
@{
    ViewData["Title"] = "Recuperar contraseña";
}

<body>
    <header>
        <h1>Recuperar contraseña</h1>
    </header>

    <div class="container">
        <form method="post">
            <label for="correo">Ingrese su correo electrónico</label>
            <input type="email" id="correo" name="Correo" value="@Model.Correo" required />

            <button type="submit">Enviar enlace de recuperación</button>

            @if (!string.IsNullOrEmpty(Model.Mensaje))
            {
                <p style="color:red">@Model.Mensaje</p>
            }
        </form>
    </div>
</body>

